
{
  "compilerOptions": {
    "target": "es6",                                  
    "module": "es6",                                

    "moduleResolution": "node",                     
    "outDir": "./build",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true,            
    "allowSyntheticDefaultImports": true,
    
  },
  "include":["src/**/*.ts", "src/server.ts"],
  "exclude": ["node_modules"]
}
